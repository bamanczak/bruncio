---
const { title, body } = Astro.props;
---

<div
    class="pane border-4 border-black"
    style="left: calc(50vw - 320px); top: calc(50vh - 80px)"
>
    <div class="title bg-myblue h-12">
        <h2>{title}</h2>
    </div>
    <div class="bg-back content">
        <p>
            {body}
        </p>
    </div>
    <div class="corner"></div>
</div>

<style>
    .pane {
        position: absolute;
        width: var(--pane-default-width);
        height: var(--pane-default-height);

        display: grid;
        /* Ta linijka przesuwa w dół content, nie wiem jak działa, wcześniej było:
                grid-template-rows: var(--title-bar-height) 1fr;
                pewnie moznaby to zrobic lepiej
        */
        grid-template-rows: 48px 1fr;

        box-shadow: 12px 12px 0 rgba(64, 64, 64, 0.8);
        overflow: clip;
        min-width: 160px;
        min-height: 160px;
    }

    .pane .title {
        cursor: move;

        display: flex;
        align-items: center;
        justify-content: center;

        /* background-color: var(--title-bar-color); */
        color: var(--title-bar-text-color);
    }

    .pane h2 {
        font-size: 1rem;
        font-weight: 400;
    }

    .pane .content {
        position: relative;
        /* background-color: var(--pane-content-background-color); */
    }

    /* make image fill the space */
    .pane .content img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        max-width: 100%;
        max-height: 100%;

        object-fit: cover;

        -webkit-user-drag: none;
        user-drag: none;
    }

    /* add a corner in bottom right */
    .pane .corner {
        position: absolute;
        bottom: 0;
        right: 0;
        width: 24px;
        height: 24px;

        /* north west to south east */
        cursor: nwse-resize;

        /* background-color: red; */
    }

    .pane.is-dragging .title {
        background-color: var(--title-bar-highlight-color);
    }
</style>
