<astro-clock
    id="brunc-clock"
    class="text-sm select-none text-right"
    transition:persist
>
    00:00:00
</astro-clock>
<style>
    #brunc-clock {
        min-width: 50px;
    }
</style>
<script>
    function showTime(element: HTMLElement) {
        let date = new Date().toLocaleString("pl-PL", {
            timeZone: "Europe/Warsaw",
            hour: "2-digit",
            minute: "2-digit",
            second: "2-digit",
            hour12: false,
        });
        element.innerText = date.substring(0, 5);
        setTimeout(() => {
            showTime(element);
        }, 10000);
    }
    class AstroClock extends HTMLElement {
        constructor() {
            super();
            showTime(this);
        }
    }
    customElements.define("astro-clock", AstroClock);
</script>
